<h1>Games#new</h1>
<p><%= @letters %></p>
<form action="/score" method="score" data-turbo="false" >
  <label for="input_word">What is the longest word you can find?</label>
  <input type="text" name="user_input" id="input_word">
  <input type="submit" value="Play!">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag 'letters', @letters.join %>
  <!-- ... -->
</form>
